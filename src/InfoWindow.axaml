<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="600"
        x:Class="PoolController.InfoWindow"
        Title="InfoWindow" Width="1024" Height="600" Background="#06202B" WindowState="FullScreen">
        <Window.Styles>
                <Style Selector="Label">
                        <Setter Property="Foreground" Value="Snow"/>
                </Style>
        </Window.Styles>
        
        
        <!-- Main Grid -->
        <Grid ColumnDefinitions="20, *, 20" RowDefinitions="20, 60, *, *, *, 20">
                <Label Grid.Column="1" Grid.Row="1" Content="Developed By:" FontSize="40" FontWeight="Bold"/>
                <Image Grid.Column="1" Grid.Row="2" Source="/img/sloppy-logo.png" Height="400" Margin="0,60,0,0"/>
                <Label Grid.Column="1" Grid.Row="3" Content="Version   |   V 1.0" FontSize="20" HorizontalContentAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Orientation="Horizontal">
                        <StackPanel.Styles>
                                <Style Selector="Button">
                                        <Setter Property="Background" Value="Snow"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Margin" Value="30, 0"/>
                                        <Setter Property="Height" Value="80"/>
                                        <Setter Property="Width" Value="80"/>
                                        <Setter Property="CornerRadius" Value="15"/>
                                </Style>
                                <Style Selector="Button:pointerover ContentPresenter">
                                        <Setter Property="Background" Value="Cyan"/>
                                </Style>
                        </StackPanel.Styles>
                       
                        <Button Name="BtnInfoExit" Click="BtnInfoExit_OnClick">
                                <Image Source="/img/exit.png"/>
                        </Button>
                </StackPanel>
        </Grid>
</Window>
